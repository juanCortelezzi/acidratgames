---
interface Props {
  name: string;
  role: string;
  favouriteGames: string[];
  email?: string;
}
---

<div>
  <div class="flex items-center sm:space-x-8">
    <div
      class="relative hidden overflow-hidden rounded bg-slate-800 shadow-inner shadow-slate-950 sm:block sm:h-14 sm:min-h-14 sm:w-14 sm:min-w-14"
    >
      <slot name="avatar" />
      <div
        class="absolute left-0 top-0 h-full w-full shadow-inner shadow-slate-950"
      >
      </div>
    </div>
    <div class="space-y-2">
      <div
        class="text-lg font-bold underline decoration-pink-400 underline-offset-4"
      >
        {Astro.props.name}
      </div>
      <div class="text-slate-400 sm:space-x-2 sm:flex">
        <div>{Astro.props.role}</div>
        {Astro.props.email ? <div class="hidden sm:block">|</div> : null}
        {Astro.props.email ? <div>{Astro.props.email}</div> : null}
      </div>
    </div>
  </div>
  <div class="my-6"></div>
  <div class="max-w-prose">
    <slot />
  </div>
  <div class="my-6"></div>
  <div
    class="flex flex-col items-baseline space-y-1 text-slate-400 sm:flex-row sm:space-x-2 sm:space-y-0"
  >
    <div>Favourite games:</div>
    <div>{Astro.props.favouriteGames.join(", ")}</div>
  </div>
</div>
