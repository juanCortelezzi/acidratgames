---
interface Props {
  name: string;
  role: string;
  favouriteGames: string[];
}
---

<div>
  <div class="flex items-center space-x-8">
    <div
      class="relative h-12 min-h-12 w-12 min-w-12 overflow-hidden rounded bg-slate-800 shadow-inner shadow-slate-950"
    >
      <slot name="avatar" />
      <div
        class="absolute left-0 top-0 h-full w-full shadow-inner shadow-slate-950"
      >
      </div>
    </div>
    <div>
      <div class="text-lg font-bold">{Astro.props.name}</div>
      <div class="text-slate-400">{Astro.props.role}</div>
    </div>
  </div>
  <div class="my-8"></div>
  <div class="max-w-prose">
    <slot />
  </div>
  <div class="my-8"></div>
  <div
    class="flex flex-col items-baseline space-y-1 text-slate-400 sm:flex-row sm:space-x-2 sm:space-y-0"
  >
    <div>Favourite games:</div>
    <div>{Astro.props.favouriteGames.join(", ")}</div>
  </div>
</div>
